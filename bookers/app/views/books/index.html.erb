
<h1 class="title">Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Destroy", book_path(book.id), method: :delete %>
      </td>
    </tr>
      <% end %>
  </tbody>
</table>
<h2>New book</h2>
  <div class="error-message">
    <% if @book.errors.any? %>
    <%= @book.errors.count %>error has occurred
      <ul>
        <li><% @book.errors.full_messages.each do |message| %>
        <%= message %>
        </li>
        <% end %>
      </ul>
    <% end %>
  </div>
<%= form_with model:@book, local:true do |f| %>

  <div class="form">Title</div>
  <%= f.text_field :title %>

  <div class="form">Body</div>
  <%= f.text_area :body %>

  <div class="submit">
  <%= f.submit 'Create Book' %>
  </div>
<% end %>